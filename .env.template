# ΓΕΩΤΕΕ Chatbot Environment Variables

# General
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=change-this-to-random-secret-key

# Database
DATABASE_URL=postgresql://geotee_user:password@localhost:5432/geotee_chatbot

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Rasa
RASA_URL=http://localhost:5005
RASA_TOKEN=change-this-token

# Qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=geotee_kb

# Rate Limiting
MAX_QUERIES_PER_SESSION=10
SESSION_TIMEOUT_MINUTES=60
RATE_LIMIT_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true
MATOMO_URL=http://localhost:8080
MATOMO_SITE_ID=1

# Scraping
SCRAPER_USER_AGENT=GEOTEE-Bot/1.0
SCRAPER_DELAY=2
TARGET_URL=https://web.geotee.gr

# Monitoring
LOG_LEVEL=INFO
